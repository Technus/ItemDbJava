<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dgs.dapc.itemDB.javafx.main.tabs.items.ChangesOverviewController">
   <center>
      <TableView fx:id="placementsTable" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="itemNameColumn" prefWidth="75.0" text="Item Name" />
            <TableColumn fx:id="manufacturerColumn" prefWidth="88.0" text="Manufacturer" />
          <TableColumn fx:id="designationsColumn" prefWidth="89.0" text="Designations" />
            <TableColumn prefWidth="208.0" text="Count">
               <columns>
                  <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Qty." />
                  <TableColumn fx:id="minimalColumn" prefWidth="75.0" text="Min." />
                  <TableColumn fx:id="purchasedColumn" prefWidth="75.0" text="Pur." />
               </columns>
            </TableColumn>
            <TableColumn fx:id="serialColumn" prefWidth="75.0" text="Serial No." />
            <TableColumn fx:id="detailsColumn" prefWidth="75.0" text="Details" />
        </columns>
      </TableView>
   </center>
   <left>
      <VBox prefWidth="150.0" spacing="4.0" BorderPane.alignment="CENTER">
         <children>
            <ToggleButton fx:id="pinToggle" mnemonicParsing="false" text="ðŸ“Œ" />
            <Button fx:id="removeButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#removeFromList" text="Remove from list" />
            <TitledPane text="Add / Subtract">
               <content>
                  <VBox spacing="4.0">
                     <children>
                        <Spinner fx:id="countSpinner" editable="true" styleClass="split-arrows-horizontal" />
                        <Button fx:id="addButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addToAll" text="Add to all" />
                        <Button fx:id="subButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#subFromAll" text="Take from all" />
                     </children>
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding>
                  </VBox>
               </content>
            </TitledPane>
         </children>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding></VBox>
   </left>
</BorderPane>
